<style>
    .skillCard{
        display: flex;
        flex-direction: column;
        background-color: var(--clr-dark-slate);
        padding: 1.5rem;
        gap: 15px;
        border-radius: 8px;
        transition: all 0.3s ease-in-out;
        border: solid 1px var(--clr-accent-transparent);
        max-width: 400px;
        height: 170px;
    }

    .skillCard:hover{
        border: solid 1px var(--clr-accent);
    }

    ul{
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 0.7rem;
        list-style-type: none;
        color: var(--clr-text-secundary);
    }

    li{
        font-size: 1rem;
        margin-bottom: 0.5rem;
    }

    .skillHeader{
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 10px;
    }

    .title{
        font-size: 1.2rem;
        font-weight: 400;
    }

    /* .icon{
        padding: 5px;
        border-radius: 50%;
    } */

    .icon span{
        transition: color 0.3s ease-in-out;
        color: var(--clr-accent);
    }

    .skillCard:hover .icon {
        background-color: var(--clr-accent-transparent); 
        transition: background-color 0.3s ease-in-out;
    }

</style>