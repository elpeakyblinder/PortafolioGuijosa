---
import "../styles/global.css";
import SonnerToaster from "@/components/ui/SonnerToaster.jsx";

export interface Props {
    title: string;
    description: string;
}

const { 
    title = "Guijosa | Portafolio", 
    description = "Portafolio de Carlos Guijosa, Desarrollador Full Stack." 
} = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/logo/logo.png" />
        <meta name="description" content={description} />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Sora:wght@100..800&display=swap"
            rel="stylesheet"
        />
        <title>{title}</title>
    </head>
    <body>
        <slot />
        <SonnerToaster client:load />
    </body>
</html>
